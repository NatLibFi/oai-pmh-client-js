{
	"name": "@natlibfi/oai-pmh-client",
	"description": "OAI-PMH Javascript client library",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/oai-pmh-client-js",
	"bugs": {
		"url": "https://github.com/natlibfi/oai-pmh-client-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/oai-pmh-client-js.git"
	},
	"license": "LGPL-3.0+",
	"version": "3.0.0-alpha.4",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/*.spec.js && npm run coverage",
		"test:dev": "npm run lint:dev && npm run test:base -- src/*.spec.js && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src -w test-fixtures --exec 'npm run test:dev'"
	},
	"dependencies": {
		"debug": "^4.3.4",
		"http-status": "^1.6.2",
		"moment": "^2.29.4",
		"node-fetch": "^2.6.9",
		"xml2js": ">=0.5.0 <1.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/core": "^7.21.4",
		"@babel/eslint-parser": "^7.19.1",
		"@babel/node": "^7.20.7",
		"@babel/preset-env": "^7.21.4",
		"@babel/register": "^7.21.0",
		"@natlibfi/eslint-config-melinda-backend": "^2.0.2",
		"@natlibfi/fixugen-http-client": "^2.0.1",
		"@natlibfi/fixura": "^3.0.0",
		"babel-plugin-istanbul": "^6.1.1",
		"chai": "^4.3.7",
		"cross-env": "^7.0.3",
		"eslint": "^8.38.0",
		"mocha": "^10.2.0",
		"nodemon": "^2.0.22",
		"nyc": "^15.0.1"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"*/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
