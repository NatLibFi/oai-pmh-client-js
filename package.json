{
	"name": "@natlibfi/oai-pmh-client",
	"description": "OAI-PMH Javascript client library",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://www.npmjs.com/package/@natlibfi/oai-pmh-client",
	"bugs": {
		"url": "https://github.com/NatLibFi/oai-pmh-client-js/issues"
	},
	"repository": {
		"url": "https://github.com/NatLibFi/oai-pmh-client-js"
	},
	"license": "MIT",
	"version": "4.0.0-alpha.7",
	"main": "./dist/index.js",
	"type": "module",
	"engines": {
		"node": ">=22.12.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepare": "npm run build",
		"build": "esbuild \"src/**/*.js\" --sourcemap --platform=node --outdir=dist",
		"lint": "eslint ./src",
		"lint:dev": "eslint --fix ./src",
		"test:base": "node --test --test-force-exit --experimental-test-coverage --test-reporter=spec './src/**/*.test.js'",
		"dev:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test node --watch --test --experimental-test-coverage --test-reporter=spec './src/**/*.test.js'",
		"test": "npm run lint && npm run test:base"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^10.0.0",
		"@natlibfi/marc-record-serializers": "^11.0.0",
		"@natlibfi/melinda-backend-commons": "^3.0.0",
		"debug": "^4.4.3",
		"esbuild": "^0.27.0",
		"http-status": "^2.1.0",
		"moment": "^2.30.1",
		"xml2js": "^0.6.2",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@natlibfi/fixugen-http-client": "^4.0.0",
		"@natlibfi/fixura": "^4.0.0",
		"cross-env": "^10.1.0",
		"eslint": "^9.39.1"
	}
}
